<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.nmfw.foodietree.domain.customer.mapper.CustomerMapper">


    <!-- 새로운 고객 정보 저장-->
    <insert id="save">
        INSERT INTO tbl_customer
            (customer_id, customer_password, nickname)
        VALUES
            (#{customerId}, #{customerPassword}, #{nickName})
    </insert>

    <!-- 아이디 중복 검사-->
    <select id="existsById" resultType="boolean">
        SELECT COUNT(*)
        FROM tbl_customer
        WHERE customer_id = #{keyword}
    </select>


    <!--  고객 1명의 정보를 조회 -->
    <select id="findOne" resultType="customer">
        SELECT
        customer_id
            , customer_password
            , nickName
            , customer_phone_number
            , profile_image
            , session_id
        FROM tbl_customer
        WHERE customer_id = #{customerId}
    </select>

    <!-- 선호하는 음식 저장하기 -->
    <insert id="savePreferredFoods">
        INSERT INTO tbl_fav_food (customer_id, preferred_food)
        VALUES
        <foreach collection="preferredFoods" item="food" separator=",">
            (#{customerId}, #{food})
        </foreach>
    </insert>


